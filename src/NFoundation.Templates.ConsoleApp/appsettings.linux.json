{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/leonardo/plank/seaspray/test-bench/txt/sstb-txt-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/leonardo/plank/seaspray/test-bench/json/sstb-json-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
